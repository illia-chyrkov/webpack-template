{
  "name": "template_webpack",
  "version": "2.0.0",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --mode development",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "lint": "npm run stylelint && npm run eslint",
    "stylelint": "stylelint 'src/**/*.css'",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "format": "npm run prettier && npm run csscomb",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css}'",
    "csscomb": "csscomb src/**/*.css",
    "prebuild": "npm run lint",
    "pre-commit": "npm run format && npm run build && git add ."
  },
  "pre-commit": "pre-commit",
  "author": "Illia Chyrkov",
  "license": "ISC",
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.3.1",
    "csscomb": "^4.3.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.4.5",
    "nunjucks": "^3.2.3",
    "nunjucks-html-loader": "^1.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-order": "^5.0.0",
    "stylelint-order-config-standard": "^0.1.3",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1"
  }
}
